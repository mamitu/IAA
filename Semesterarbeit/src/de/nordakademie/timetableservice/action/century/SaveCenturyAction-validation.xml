<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE validators PUBLIC
         "-//Apache Struts//XWork Validator 1.0.3//EN"
           "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<field name="century.name">
		<field-validator type="requiredstring">
			<message key="label.required.centuryName" />
		</field-validator>
		<field-validator type="regex">
			<param name="expression"><![CDATA[^[BIW][0-9]{2}[a-z]$]]></param>
			<message key="label.error.centuryName" />
		</field-validator>
	</field>

	<field name="century.numberOfStudents">
		<field-validator type="int">
			<param name="min">0</param>
			<message key="label.required.numberOfStudents" />
		</field-validator>
	</field>

	<field name="lecturer.breakTime">
		<field-validator type="int">
			<param name="min">0</param>
			<message key="label.required.breakTime" />
		</field-validator>
	</field>
</validators>

