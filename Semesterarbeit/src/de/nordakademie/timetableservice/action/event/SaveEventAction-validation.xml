<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE validators PUBLIC
         "-//Apache Struts//XWork Validator 1.0.3//EN"
           "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<field name="event.name">
		<field-validator type="requiredstring">
			<message key="label.required.eventName" />
		</field-validator>
		<field-validator type="regex">
			<param name="expression"><![CDATA[^[-A-Za-z\säöü0-9]+$]]></param>
			<message key="label.error.eventName" />
		</field-validator>
	</field>

	<field name="event.startDate">
		<field-validator type="requiredstring">
			<message key="label.required.startDate" />
		</field-validator>
		<field-validator type="date">
			<param name="min">01/01/2000</param>
			<param name="max">01/01/2100</param>
			<message key="label.error.date" />
		</field-validator>
	</field>

	<field name="event.endDate">
			<field-validator type="requiredstring">
			<message key="label.required.endDate" />
		</field-validator>
		<field-validator type="date">
			<param name="min">01/01/2000</param>
			<param name="max">01/01/2100</param>
			<message key="label.error.date" />
		</field-validator>
	</field>

</validators>

