<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE validators PUBLIC
         "-//Apache Struts//XWork Validator 1.0.3//EN"
           "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>

	<field name="lecturer.firstName">
		<field-validator type="requiredstring">
			<message key="label.required.firstName" />
		</field-validator>
		<field-validator type="regex">
			<param name="expression"><![CDATA[^[-A-Za-z\säöü]+$]]></param>
			<message key="label.error.name" />
		</field-validator>
	</field>

	<field name="lecturer.lastName">
		<field-validator type="requiredstring">
			<message key="label.required.lastName" />
		</field-validator>
		<field-validator type="regex">
			<param name="expression"><![CDATA[^[-A-Za-z\säöü]+$]]></param>
			<message key="label.error.name" />
		</field-validator>
	</field>

	<field name="lecturer.emailAddress">
		<field-validator type="requiredstring">
			<message key="label.required.email" />
		</field-validator>
		<field-validator type="email">
			<message key="label.error.email" />
		</field-validator>
	</field>

	<field name="lecturer.breakTime">
		<field-validator type="long">
			<param name="min">0</param>
			<message key="label.required.breakTime" />
		</field-validator>
	</field>

</validators>

